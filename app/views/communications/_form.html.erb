<%= form_with(model: communication, local: true) do |form| %>
  <% if communication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(communication.errors.count, "error") %> prohibited this communication from being saved:</h2>

      <ul>
        <% communication.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="w-full max-w-md mx-auto my-8 pt-24">
  <div class="bg-white shadow-2xl rounded px-10 pt-8 pb-10 mb-6">
  <% if request.fullpath.include?('sales') %>
  <h1 class="heading text-5xl font-normal text-black pt-4 mb-8">Contact Sales</h1>
  <% else %>
  <h1 class="heading text-5xl font-normal text-black pt-4 mb-8">Contact Support</h1>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, class:"block text-gray-800 text-sm font-bold mb-2" %>
    <%= form.text_field :name, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :company, class:"block text-gray-800 text-sm font-bold mb-2" %>
    <%= form.text_field :company, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :email, class:"block text-gray-800 text-sm font-bold mb-2" %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

   <div class="mb-6">
    <%= form.label :phone, class:"block text-gray-800 text-sm font-bold mb-2" %>
    <%= form.text_field :phone, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :message, class:"block text-gray-800 text-sm font-bold mb-2" %>
    <%= form.text_area :text, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="md-6">
    <%= form.submit "Continue", class: "btn btn-default w-full bg-indigo-700" %>
  </div>
  </div>
<% end %>
